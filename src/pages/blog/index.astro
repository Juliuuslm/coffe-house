---
import MainLayout from '@/layouts/MainLayout.astro';
import BlogFilter from '@/components/react/BlogFilter';
import { blogPosts } from '@/data/blog';

const featuredPosts = blogPosts.filter((post) => post.featured);
const latestPosts = blogPosts.slice(0, 3);
---

<MainLayout
  title="Blog - Coffee House"
  description="Explore our coffee blog for brewing guides, origin stories, barista tips, and the latest coffee news and trends."
  image="/images/blog-hero.jpg"
>
  <!-- Hero Section -->
  <section class="relative py-24 md:py-32 bg-gradient-primary overflow-hidden">
    {/* Decorative elements */}
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 left-10 w-72 h-72 bg-white rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-white rounded-full blur-3xl"></div>
    </div>

    <div class="container-custom relative z-10">
      <div class="max-w-3xl mx-auto text-center text-white">
        <span
          class="inline-block px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-secondary font-semibold mb-6"
          data-gsap="fade-up"
        >
          Coffee Knowledge Hub
        </span>
        <h1 class="text-h1 font-primary mb-6" data-gsap="fade-up">
          Explore the World of Coffee
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-white/90" data-gsap="fade-up">
          From brewing guides to origin stories, discover everything you need to know about coffee
          culture, techniques, and sustainability.
        </p>

        {/* Stats */}
        <div
          class="grid grid-cols-3 gap-8 max-w-2xl mx-auto mt-12"
          data-gsap="stagger-children"
        >
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-primary font-bold mb-2">{blogPosts.length}</div>
            <div class="text-sm md:text-base text-white/80">Articles</div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-primary font-bold mb-2">
              {Array.from(new Set(blogPosts.map((p) => p.category))).length}
            </div>
            <div class="text-sm md:text-base text-white/80">Categories</div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-primary font-bold mb-2">
              {Array.from(new Set(blogPosts.flatMap((p) => p.tags))).length}
            </div>
            <div class="text-sm md:text-base text-white/80">Topics</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Posts -->
  {
    featuredPosts.length > 0 && (
      <section class="section-padding bg-gray-50">
        <div class="container-custom">
          <div class="text-center mb-12" data-gsap="fade-up">
            <span class="text-primary font-secondary font-semibold text-sm uppercase tracking-wider">
              Editor's Pick
            </span>
            <h2 class="text-h2 font-primary mt-3">Featured Articles</h2>
            <p class="text-body mt-4 max-w-2xl mx-auto">
              Our most popular and comprehensive guides to help you master the art of coffee
            </p>
          </div>

          <div class="grid md:grid-cols-2 gap-8" data-gsap="stagger-children">
            {featuredPosts.map((post) => (
              <article class="card-hover group flex flex-col md:flex-row overflow-hidden bg-white rounded-2xl">
                {/* Image */}
                <div class="md:w-1/2 aspect-[16/10] md:aspect-auto overflow-hidden bg-gray-200 relative">
                  <img
                    src={post.image}
                    alt={post.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                    decoding="async"
                  />
                  <div class="absolute top-4 left-4 bg-primary text-white px-3 py-1 rounded-full text-xs font-secondary font-bold flex items-center gap-2">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    Featured
                  </div>
                </div>

                {/* Content */}
                <div class="md:w-1/2 p-6 flex flex-col justify-center">
                  <span class="inline-block px-3 py-1 text-xs font-secondary font-semibold text-primary bg-primary/10 rounded-full mb-3 w-fit">
                    {post.category}
                  </span>

                  <h3 class="text-h4 font-primary mb-3 group-hover:text-primary transition-colors">
                    <a href={`/blog/${post.slug}`}>{post.title}</a>
                  </h3>

                  <p class="text-body text-sm mb-4 line-clamp-2">{post.excerpt}</p>

                  {/* Tags */}
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.tags.slice(0, 3).map((tag) => (
                      <span class="text-xs text-primary bg-primary/5 px-2 py-1 rounded">
                        #{tag}
                      </span>
                    ))}
                  </div>

                  <div class="flex items-center gap-3 pt-4 border-t border-gray-200">
                    <img
                      src={post.author.avatar}
                      alt={post.author.name}
                      class="w-10 h-10 rounded-full object-cover"
                      loading="lazy"
                      decoding="async"
                    />
                    <div class="flex-grow">
                      <p class="font-secondary font-semibold text-heading text-sm">
                        {post.author.name}
                      </p>
                      <p class="text-body text-xs">{post.readTime}</p>
                    </div>
                    <a
                      href={`/blog/${post.slug}`}
                      class="btn-primary btn-sm"
                      aria-label="Read article"
                    >
                      Read More
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- All Posts with Filters -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-12" data-gsap="fade-up">
        <span class="text-primary font-secondary font-semibold text-sm uppercase tracking-wider">
          Discover More
        </span>
        <h2 class="text-h2 font-primary mt-3">All Articles</h2>
        <p class="text-body mt-4 max-w-2xl mx-auto">
          Browse our complete collection of coffee articles, guides, and stories
        </p>
      </div>

      <BlogFilter client:load />
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="section-padding bg-gradient-primary">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center text-white" data-gsap="fade-up">
        <svg
          class="w-16 h-16 mx-auto mb-6 text-white/80"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          />
        </svg>
        <h2 class="text-h2 font-primary mb-4">Never Miss an Article</h2>
        <p class="text-xl mb-8 text-white/90">
          Subscribe to our newsletter and get the latest coffee tips, guides, and stories delivered
          to your inbox.
        </p>
        <form class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
          <input
            type="email"
            placeholder="Enter your email"
            class="flex-grow px-6 py-4 rounded-full text-heading focus:outline-none focus:ring-2 focus:ring-white"
            required
          />
          <button type="submit" class="btn-white btn-lg whitespace-nowrap"> Subscribe Now </button>
        </form>
      </div>
    </div>
  </section>

  <style>
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</MainLayout>
