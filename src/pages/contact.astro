---
import MainLayout from '@/layouts/MainLayout.astro';
---

<MainLayout
  title="Contact Us"
  description="Get in touch with Coffee House. Visit us, call us, or send us a message. We'd love to hear from you."
>
  <!-- Page Hero -->
  <section class="relative h-[60vh] flex items-center justify-center bg-gradient-to-br from-secondary-900 to-secondary-800">
    <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1559056199-641a0ac8b55e?w=1920')] bg-cover bg-center opacity-20"></div>
    <div class="relative z-10 container-custom text-center text-white">
      <h1 class="text-h1 mb-6">Get In Touch</h1>
      <p class="text-xl max-w-2xl mx-auto">
        We'd love to hear from you. Visit us, call us, or send us a message.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Contact Info -->
        <div>
          <h2 class="text-h2 mb-8">Visit Us</h2>

          <!-- Location -->
          <div class="mb-8 flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center">
                <svg
                  class="w-7 h-7 text-primary"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-h5 mb-2">Location</h3>
              <p class="text-body">
                123 Coffee Street, Downtown<br />
                City, State 12345<br />
                United States
              </p>
            </div>
          </div>

          <!-- Phone -->
          <div class="mb-8 flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center">
                <svg
                  class="w-7 h-7 text-primary"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  />
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-h5 mb-2">Phone</h3>
              <p class="text-body">
                <a href="tel:+1234567890" class="hover:text-primary transition-colors">
                  +1 (234) 567-890
                </a>
              </p>
            </div>
          </div>

          <!-- Email -->
          <div class="mb-8 flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center">
                <svg
                  class="w-7 h-7 text-primary"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  />
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-h5 mb-2">Email</h3>
              <p class="text-body">
                <a href="mailto:info@coffeehouse.com" class="hover:text-primary transition-colors">
                  info@coffeehouse.com
                </a>
              </p>
            </div>
          </div>

          <!-- Opening Hours -->
          <div class="mb-8">
            <h3 class="text-h5 mb-4">Opening Hours</h3>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="font-semibold">Monday - Friday</span>
                <span class="text-body">7:00 AM - 8:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span class="font-semibold">Saturday</span>
                <span class="text-body">8:00 AM - 9:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span class="font-semibold">Sunday</span>
                <span class="text-body">8:00 AM - 7:00 PM</span>
              </div>
            </div>
          </div>

          <!-- Social Links -->
          <div>
            <h3 class="text-h5 mb-4">Follow Us</h3>
            <div class="flex gap-4">
              {
                ['facebook', 'instagram', 'twitter'].map((social) => (
                  <a
                    href="#"
                    class="w-12 h-12 rounded-full border-2 border-gray-300 flex items-center justify-center hover:border-primary hover:text-primary transition-colors"
                    aria-label={social}
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      {social === 'facebook' && (
                        <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" />
                      )}
                      {social === 'instagram' && (
                        <>
                          <rect width="20" height="20" x="2" y="2" rx="5" ry="5" />
                          <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01" />
                        </>
                      )}
                      {social === 'twitter' && (
                        <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" />
                      )}
                    </svg>
                  </a>
                ))
              }
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-h2 mb-8">Send Us a Message</h2>

          <form id="contact-form" class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-semibold mb-2">Name *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary focus:outline-none transition-colors"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-semibold mb-2">Email *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary focus:outline-none transition-colors"
                  placeholder="your@email.com"
                />
              </div>
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold mb-2">Phone</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary focus:outline-none transition-colors"
                placeholder="+1 (234) 567-890"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-semibold mb-2">Subject *</label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary focus:outline-none transition-colors"
                placeholder="How can we help?"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold mb-2">Message *</label>
              <textarea
                id="message"
                name="message"
                required
                rows="6"
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary focus:outline-none transition-colors resize-none"
                placeholder="Your message..."
              ></textarea>
            </div>

            <button type="submit" class="btn-primary btn-lg w-full md:w-auto">
              Send Message
            </button>

            <div id="form-message" class="hidden mt-4 p-4 rounded-lg"></div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="h-[500px] bg-gray-200">
    <div class="w-full h-full flex items-center justify-center text-gray-500">
      <div class="text-center">
        <svg
          class="w-16 h-16 mx-auto mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
          />
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
          />
        </svg>
        <p class="text-lg">Map Integration Coming Soon</p>
        <p class="text-sm mt-2">Google Maps will be integrated here</p>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  function initContactForm() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const message = document.getElementById('form-message');

    if (!form || !message) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Show loading state
      const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalText = submitButton.textContent;
      submitButton.disabled = true;
      submitButton.textContent = 'Sending...';

      // Simulate form submission (replace with actual API call)
      setTimeout(() => {
        message.classList.remove('hidden', 'bg-red-100', 'text-red-700');
        message.classList.add('bg-green-100', 'text-green-700');
        message.textContent = 'Thank you! Your message has been sent successfully. We\'ll get back to you soon.';

        form.reset();
        submitButton.disabled = false;
        submitButton.textContent = originalText || 'Send Message';

        // Hide message after 5 seconds
        setTimeout(() => {
          message.classList.add('hidden');
        }, 5000);
      }, 1500);
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initContactForm);

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initContactForm);
</script>
