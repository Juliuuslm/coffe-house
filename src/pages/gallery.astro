---
import MainLayout from '@/layouts/MainLayout.astro';
import GalleryGrid from '@/components/react/GalleryGrid';
---

<MainLayout
  title="Gallery"
  description="Take a visual journey through Coffee House - from our cozy interior to our carefully crafted beverages and delicious treats."
>
  <!-- Page Hero -->
  <section class="relative h-[60vh] flex items-center justify-center bg-gradient-to-br from-secondary-900 to-secondary-800">
    <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1442512595331-e89e73853f31?w=1920')] bg-cover bg-center opacity-20"></div>
    <div class="relative z-10 container-custom text-center text-white">
      <h1 class="text-h1 mb-6" data-gsap="fade-up">Gallery</h1>
      <p class="text-xl max-w-2xl mx-auto" data-gsap="fade-up">
        A glimpse into our world of exceptional coffee and cozy ambiance
      </p>
    </div>
  </section>

  <!-- Gallery Grid with React Component -->
  <section class="section-padding">
    <div class="container-custom">
      <GalleryGrid client:load />
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding-sm bg-gradient-primary text-white">
    <div class="container-custom text-center" data-gsap="fade-up">
      <h2 class="text-h3 mb-6">Experience It Yourself</h2>
      <p class="text-lg mb-8 max-w-2xl mx-auto opacity-90">
        These photos only tell part of the story. Come visit us and create your own Coffee House memories.
      </p>
      <a href="/contact" class="btn-white btn-lg">
        Plan Your Visit
      </a>
    </div>
  </section>
</MainLayout>
